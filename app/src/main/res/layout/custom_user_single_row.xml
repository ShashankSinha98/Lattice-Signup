<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/fullname_single_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Shashank Sinha"
        style="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />



    <TextView
        android:id="@+id/email_single_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="sinhashashank.98@gmail.com"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_below="@id/fullname_single_row"
        android:layout_marginLeft="10dp"
        />



    <TextView
        android:id="@+id/number_single_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="9650908741"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_below="@id/email_single_row"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/address_single_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="B-5/384, F/F, Yamuna Vihar"
        android:textColor="@android:color/black"
        android:layout_below="@id/number_single_row"
        android:layout_marginLeft="10dp"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginTop="10dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/address_single_row"
        android:layout_marginTop="7dp"
        android:background="@android:color/black"/>



</RelativeLayout>